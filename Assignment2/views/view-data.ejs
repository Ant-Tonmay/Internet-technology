<!DOCTYPE html>
<html lang="en">
  <head>
    <style>
      .content-view {
        height: 300px;
        width: 500px;
      }

      .content-view img {
        height: 100%;
        width: 100%;
        object-fit: contain;
      }
    </style>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Display Content</title>
  </head>
  <body>
    <h1>Content:</h1>

    <div class="download-all">
      <!-- Button to trigger the download of all items -->
      <button onclick="downloadAll()">Download All</button>
    </div>

    <div>
      <% content.forEach(item => { %>
      <div>
        <div class="content-view">
          <% if (item.endsWith('g')) { %>
          <!-- Download link for image -->
          <a
            class="download"
            href="<%= '/' + item %>"
            download="image.jpg"
          >
            <button>Download</button>
          </a>
          <!-- Display the image -->
          <img src="<%= '/' + item %>" alt="" />
          <% } else { %>
          <!-- Display text content -->
          <%= item %>
          <br />
          <!-- Download link for text file -->
          <a
            class="download"
            href="<%= '/' + item %>"
            download="textFile.jpg"
          >
            <button>Download</button>
          </a>
          <% } %>
        </div>
      </div>
      <% }) %>
    </div>

    <script>
      // JavaScript function to trigger the download of all items
      function downloadAll() {
        document.querySelectorAll(".download").forEach((d) => d.click());
      }
    </script>
  </body>
</html>
